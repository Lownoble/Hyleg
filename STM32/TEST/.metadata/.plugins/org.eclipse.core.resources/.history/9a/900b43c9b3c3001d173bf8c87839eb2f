void print_usart1(char *format, ...)
{
    char buf[64];

    if(inHandlerMode() != 0)
	{
        taskDISABLE_INTERRUPTS();//Ëã•Âú®‰∏≠Êñ≠‰∏≠Ë∞ÉÁî®ÂàôÂÖ≥Èó≠‰∏≠Êñ≠ÔºåÈò≤Ê≠¢‰∏≠Êñ≠ÂµåÂ•óÔøΩ?ÔøΩÊàêÁ∫øÁ®ã‰∏çÂÆâÔø???
	}
    else
    {
		taskENTER_CRITICAL();    //Ëã•‰∏çÂú®‰∏≠Êñ≠‰∏≠ÂàôËøõÂÖ•‰∏¥ÁïåÂå∫ÂÖ≥Èó≠‰∏≠Êñ≠‰∏îÁ¶ÅÊ≠¢‰ªªÂä°Ë∞ÉÔø???
	}
	va_list ap;
	va_start(ap, format);
	vsprintf(buf, format, ap);
	HAL_UART_Transmit(&huart1, (uint8_t *)buf, strlen(buf), 100);
	va_end(ap);
	if(inHandlerMode() != 0)
	{
		taskENABLE_INTERRUPTS();//ÊâìÂºÄ‰∏≠Êñ≠
	}else{
		taskEXIT_CRITICAL();//Âá∫‰∏¥ÁïåÂå∫
	}
}
void DmaPrintf(const char *format,...)
{
	uint16_t len;
	va_list args;
	va_start(args,format);
	len = vsnprintf((char*)USART1_TX_BUF,sizeof(USART1_TX_BUF)+1,(char*)format,args);
	va_end(args);
	HAL_UART_Transmit_DMA(&huart1, USART1_TX_BUF, len);
}


